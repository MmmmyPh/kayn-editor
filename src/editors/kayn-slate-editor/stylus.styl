@import '~stylus/mixins'
@import '~stylus/variables'

.kayn
	&__wrapper
		border(1px solid $color-border-base)
		border-radius: 5px
	&__toolbar
		margin: 0
		padding: 0 5px
		box-shadow: inset 0 -1px 0 0 rgba(0,0,0,.2)
	&__content
		padding: 3% 3% 25px
		height: 250px
		overflow-y: auto
	&__core
		height 100%